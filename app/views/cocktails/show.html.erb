<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to cocktails_path, class: "navbar-brand" do %>
    <%= image_tag "https://source.unsplash.com/500x400/?cocktail" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      </li>
    </ul>
  </div>
</div>

<div class="container">
<h2><%= @cocktail.name %></h2>
<ul class="list-group">
<% @cocktail.doses.each do |dose| %>
  <li class="list-group-item">
    <%= dose.description %> |
    <%= dose.ingredient.name %> |
    <%= link_to 'Delete', dose, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>


</ul>
<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %> |
</div> 