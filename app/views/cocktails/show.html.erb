<div class="container">
  <h1>Cocktail details</h1>
  <p><%= @cocktail.name %></p>
  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <%= link_to "Remove", dose_path(dose), 
                  method: :delete,
                  data: { confirm: "Are you sure?" } %> |
  <% end %>


<%= link_to 'Back to Cocktails', cocktails_path %> |
<%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail) %> |

</div>