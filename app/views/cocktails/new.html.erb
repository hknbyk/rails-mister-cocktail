<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a Cocktail</h4>
      <%= simple_form_for [ @cocktail ] do |f| %>
        <%= f.input :name %>
        <%= f.file_field :photo %>
        <%= f.submit "Add!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>