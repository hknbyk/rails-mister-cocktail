
<div class="container">
  <h1>Cocktail List</h1>

  <div class="cards_grid"></div>
    <% @cocktails.each do |cocktail| %>
      <div class="cards mt-2 " >
        <div class="card-category " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <p class= ><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div> 
      </div>
    <% end %>


  <p class= "btn btn-warning text-white"><%= link_to 'New Cocktail' , new_cocktail_path %></p> |
</div>
